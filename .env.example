# Copy this file to .env (do NOT commit .env with real secrets)
# For local testing without real SMTP, set SKIP_SMTP=true

# SMTP server settings (leave blank if using SKIP_SMTP=true)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=you@example.com
SMTP_PASS=your-smtp-password-or-app-password

# Recipient (defaults to gerswin.ravelo@urios.edu.ph)
RECIPIENT=gerswin.ravelo@urios.edu.ph

# For local dev testing without sending real emails set:
# SKIP_SMTP=true
SKIP_SMTP=true

